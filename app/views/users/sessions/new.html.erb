
<div class="container">
	<div class="col-md-4 col-md-offset-4">
		<h2 class="form-signin-heading">Sign in</h2>
		<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
		    <%= f.input :email, :required => false, :autofocus => true,:input_html => { :class => "form-control" } %>
		    <%= f.input :password, :required => false,:input_html => { :class => "form-control" } %>
		    <%= f.input :remember_me, label: false , inline_label: 'Remember me', :as => :boolean if devise_mapping.rememberable? %>
		    <%= f.button :submit, "Sign in", :class => "btn btn-lg btn-primary btn-block"   %>
		<% end %>
		<%= render "users/shared/links" %>
	</div>
</div>



