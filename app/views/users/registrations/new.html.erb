<html class="login2-bg">
<div class="header">
    <a href="/">
        <img src="/assets/logo.png" class="logo" alt="logo" />
    </a>
</div>
<div class="login2-wrapper">
    <div class="box">
        <div class="content-wrap">
            <h6>Sign Up</h6>
			<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name),defaults: { input_html: { class: 'form-control ' } }
      ) do |f| %>
			  <%= f.error_notification %>		
		    <%= f.input :name, :required => true,label:false,placeholder:"Nombre(s)", :autofocus => true  %>
		    <%= f.input :last_name1, :required => true,label:false,placeholder:"Apellido Paterno"  %>
		    <%= f.input :last_name2, :required => true,label:false,placeholder:"Apellido Materno"  %>
		    <%= f.input :email, :required => true,label:false,placeholder:"E-Mail"  %>
			<br/>
		    <%= f.input :password, :required => true,label:false,placeholder:"Password"  %>
		    <%= f.input :password_confirmation, :required => true,label:false,placeholder:"Confirm Password"  %>
        Escoge un rol
        <%= f.collection_select :role_ids, Role.select(:name,:id),:id,:name,{} %>
          
            <div class="action">
				<%= f.button :submit, "Sign up", :class => "btn-glow primary signup" %>
            </div>              
		<% end %>
  
        </div>
    </div>

    <div class="already">
        <p>Already have an account?</p>
        <%= render "users/shared/links" %>
    </div>
</div>
</html>